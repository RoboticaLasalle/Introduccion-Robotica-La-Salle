#include <ros.h>
    #include <std_msgs/String.h>
    
    ros::NodeHandle nh;
   
   void messageCb( const std_msgs::String &msg){
    String str="w";
    if(str.compareTo(msg.data)==0){digitalWrite(13, HIGH-digitalRead(13)); delay(500);digitalWrite(13, LOW-digitalRead(12));}
    else{digitalWrite(12, HIGH-digitalRead(12)); delay(500) ;digitalWrite(12, LOW-digitalRead(12));}
        // blink the led
   }
   
   ros::Subscriber<std_msgs::String> sub("topicoPruebas", &messageCb );
   
   void setup()
   {
     pinMode(12, OUTPUT);
     pinMode(13, OUTPUT);
     nh.initNode();
     nh.subscribe(sub);
   }
   
   void loop()
   {
     nh.spinOnce();
     delay(1);
   }
